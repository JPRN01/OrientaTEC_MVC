@using OrientaTEC_MVC.Models
@model List<Profesor>

@{
    ViewBag.Title = "Gestor de Profesores";
}

<div class="container">
    <div class="search-container">
        <input type="search" id="buscarProfesor" placeholder="Buscar profesor..." onkeyup="searchTable()">
        <button id="btnAgregarProfesor" class="add-button">Agregar Profesor</button>
    </div>

    <table id="profesoresTable" class="display">
        <thead>
            <tr>
                <th>Sede</th>
                <th>Nombre</th>
                <th>Código</th>
                <th>Correo</th>
                <th>Teléfono</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var profesor in Model)
            {
                <tr>
                    <td>@profesor.Sede</td>
                    <td>@profesor.Nombre</td>
                    <td>@profesor.Codigo</td>
                    <td>@profesor.Correo</td>
                    <td>@profesor.Telefono</td>
                    <td>
                        <!-- Botones de acción -->
                        <button class="btnEditar" data-id="@profesor.Codigo">📝</button>
                        <button class="btnUsuario" data-id="@profesor.Codigo" data-activo="@profesor.Activo">👤</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css">

    <script>
        $(document).ready(function () {
            $('#profesoresTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json"
                }
            });
        });
    </script>
}





